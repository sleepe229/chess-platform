FROM node:20-alpine AS build
WORKDIR /app

# Build context is repo root (docker-compose context: ..), so paths are relative to it
COPY chess-frontend/package.json chess-frontend/package-lock.json* ./
RUN npm ci || npm install

COPY chess-frontend/ .
RUN npm run build

FROM nginx:1.27-alpine
COPY --from=build /app/dist /usr/share/nginx/html
COPY chess-frontend/nginx.conf /etc/nginx/conf.d/default.conf
EXPOSE 80

