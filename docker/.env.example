# Database
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=change-me

# JWT (use a long random string in production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-must-be-at-least-256-bits-long

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# NATS
NATS_URL=nats://nats:4222

# Service ports
GATEWAY_PORT=8080
AUTH_SERVICE_PORT=8081
USER_SERVICE_PORT=8082
MATCHMAKING_SERVICE_PORT=8083
GAME_SERVICE_PORT=8084
WS_SERVICE_PORT=8085
ANALYTICS_SERVICE_PORT=8086

# Service hosts (for gateway routing)
AUTH_SERVICE_HOST=chess-auth-service
USER_SERVICE_HOST=chess-user-service
MATCHMAKING_SERVICE_HOST=chess-matchmaking-service
GAME_SERVICE_HOST=chess-game-service
WS_SERVICE_HOST=chess-ws-service
ANALYTICS_SERVICE_HOST=chess-analytics-service

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://frontend:3000

# Spring profile for services
SPRING_PROFILES_ACTIVE=docker
